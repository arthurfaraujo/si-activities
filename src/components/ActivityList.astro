---
import Activity from './Activity.jsx'

interface ActivityData {
  id: number
  name: string
  subject: string
  endDate: string
  startDate: string
  isActive: boolean
}

const data: ActivityData[] = await fetch(
  'http://si-activities-api.onrender.com/api/activities'
)
  .then(res => res.json())
  .catch(() => [])
---

<ul>
  {
    data.map(activity => (
      <Activity
        name={activity.name}
        subject={activity.subject}
        endDate={activity.endDate}
      />
    ))
  }
</ul>
