---
import '@/styles/global.css'
import DropdownMenu from '@/components/Menu/DropdwonMenu'
import ListMenu from '@/components/Menu/ListMenu'
interface Props {
  title: string
  icon?: string
}

const { title, icon } = Astro.props
const url = Astro.url.origin.includes("localhost") ? Astro.url.origin : Astro.url.origin + "/si-activities"
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Atividades de Sistemas para Internet" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" href={icon ? `/${icon}` : "favicon.svg"} />
    <script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"></script>
    <title>{title}</title>
  </head>
  <body class="w-full flex items-center flex-col min-h-screen overflow-x-hidden bg-zinc-900 text-inherit">
    <header class="w-full flex justify-between items-center p-6 h-14">
      <a href={url}>
        <h3 class="text-lg">Atividades SI</h3>
      </a>
      <DropdownMenu client:only="react" url={url}/>
      <ListMenu client:only="react" url={url}/>
    </header>

    <main class="w-full mt-4 flex-grow flex justify-center items-center flex-col">
      <slot />
    </main>

    <footer class="h-12 flex justify-center items-center">
      <p>Â© 2024 SI Activities, All rights reserved.</p>
    </footer>
  </body>
</html>
