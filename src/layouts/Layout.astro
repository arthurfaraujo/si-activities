---
import '../styles/style.css'
import { FRONT_RELATIVE_URL } from '../const'
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Atividades de Sistemas para Internet" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"></script>
    <title>{title}</title>
  </head>
  <body class="w-full flex items-center flex-col min-h-screen overflow-x-hidden">
    <header class="w-full flex justify-between items-center p-6 h-14">
      <a href={FRONT_RELATIVE_URL + "/home"}>
        <h3>Atividades SI</h3>
      </a>
      <nav class="flex gap-4">
        <a href={FRONT_RELATIVE_URL + "/rate"}>
          <div class="nav-icon transition-all duration-200 overflow-hidden group hover:w-20 hover:flex hover:justify-around">
            <iconify-icon class="transform-none group-hover:translate-x-[-200%] group-hover:translate-y-[-200%] group-hover:hidden" icon="material-symbols:thumb-up-outline"></iconify-icon>
            <span class="hidden transform -translate-x-1/2 -translate-y-1/2 group-hover:block group-hover:transform-none">Avalie!</span>
          </div>
        </a>
        <a href={FRONT_RELATIVE_URL + "/create"}>
          <div class="nav-icon">
            <iconify-icon icon="charm:plus"></iconify-icon>
          </div>
        </a>
      </nav>
    </header>

    <main class="w-full mt-4 flex-grow flex justify-center items-center flex-col">
      <slot />
    </main>

    <footer class="h-12 flex justify-center items-center">
      <p>Â© 2024 SI Activities, All rights reserved.</p>
    </footer>
  </body>
</html>
