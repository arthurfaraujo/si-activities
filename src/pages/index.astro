---
import Layout from '../layouts/Layout.astro';

const url = Astro.url.origin
---

<Layout title="SI Activities">
  <div class="flex-grow flex gap-2 p-4 flex-wrap content-center justify-center text-center">
    <p class="min-w-fit h-fit">
      Todas as suas atividades em um só lugar.
    </p>
    <p class="min-w-fit h-fit">
      Fácil de visualizar.
    </p>
    <p class="min-w-fit h-fit">
      Fácil de lembrar.
    </p>
    <p class="min-w-fit h-fit">
      Bonito e eficiente.
    </p>
    <div class="w-full flex justify-center">
      <a href={url + "/home"}>
        <button class="border rounded p-3 px-6 border-[#5f5f5f] mt-4">Começar</button>
      </a>
    </div>
  </div>
</Layout>